<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionOverflowButtonStyle">@style/rxActionBarOverFlowerButtonStyle</item>
        <item name="android:actionBarSize">55dp</item>
        <item name="android:icon">@drawable/logo_cycle</item>
        <item name="android:actionBarStyle">@style/rxActionBarStyle</item>
    </style>

    <style name="rxActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#3d3d3d</item>
        <item name="android:titleTextStyle">@style/rxTitleStyle</item>
    </style>
    <style name="rxTitleStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">24dp</item>
    </style>
    <style name="rxActionBarOverFlowerButtonStyle" >
        <item name="android:src">@drawable/gruid</item>
        <item name="android:paddingRight">@dimen/action_bar_right_margin</item>
    </style>

    <style name="customProgressBar" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/custom_progress_bar</item>
        <item name="android:layout_width">21dip</item>
        <item name="android:layout_height">21dip</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="NewTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

</resources>
